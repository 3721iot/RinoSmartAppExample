<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="@dimen/dpp_20"
            android:paddingBottom="@dimen/dpp_20"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/spp_15"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spp_15"
            android:text="发送验证码"
            android:background="@drawable/shape_btn_bg_user_8"
            android:padding="@dimen/dpp_20"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:background="@color/f_d4d4d4" />
    <com.smart.rinoiot.common_sdk.view.CustomEditText
        android:id="@+id/etAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_100"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:layout_marginTop="@dimen/dpp_40"
        app:hintText="@string/rino_user_input_email"
        app:isPassword="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:background="@color/f_d4d4d4" />


    <com.smart.rinoiot.common_sdk.view.CustomEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_100"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:layout_marginTop="@dimen/dpp_40"
        app:hintText="@string/rino_user_password"
        app:isPassword="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginEnd="@dimen/dpp_100"
        android:background="@color/f_d4d4d4" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_100"
        android:layout_marginStart="@dimen/dpp_100"
        android:layout_marginTop="@dimen/dpp_60"
        android:layout_marginEnd="@dimen/dpp_100"
        android:background="@drawable/shape_btn_bg_user_8"
        android:gravity="center"
        android:text="@string/rino_user_register"
        android:textColor="@color/white"
        android:textSize="@dimen/spp_18" />
</LinearLayout>